{
	"lint"   : true,
	"concat" : true,
	"uglify" : true,
	"rename" : true,

	"path"   : {
		"css": {
			"src"      : ["src/css/style.css"],
			"watchSrc" : "src/css/**/*.css",
			"dest"     : "dist/css/",
			"filename" : "style.css"
		},
		"js": {
			"src"      : ["src/js/libs/**/*.js"],
			"dest"     : "dist/js/",
			"filename" : "DOMlibrary.js"
		}
	},

	"cssLintRules" : {
		"import": false,
		"ids": false
	},

	"jsUglifyOptions" : {
		"mangle": true,
		"preserveComments": "some"
	}
}
